	/**
	* ----------------------------------------
	* animation tracking-in-contract
	* ----------------------------------------
	*/
	@-webkit-keyframes tracking-in-contract {
		0% {
			letter-spacing: 0.2em;
			opacity: 0;
		}
		40% {
			opacity: 0.6;
		}
		100% {
			letter-spacing: normal;
			opacity: 1;
		}
	}
	@keyframes tracking-in-contract {
		0% {
			letter-spacing: 0.2em;
			opacity: 0;
		}
		40% {
			opacity: 0.6;
		}
		100% {
			letter-spacing: normal;
			opacity: 1;
		}
	}

	@media
		(width < 700px){
			.splash{
				display: none;
			}
			.destapaciones{
				padding-right: 0px;
				font-size: 42px;
			}
			.davila_box{
				flex-direction: column-reverse;
				text-align: center;
				align-items: center;
				h1{
					font-size:42px;
				}
			}
		}

</style>
