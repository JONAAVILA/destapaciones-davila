---
import Instagram from "./buttons/Instagram.astro";
import Whatsapp from "./buttons/Whatsapp.astro";
import Meta from "./buttons/Meta.astro";
---

<aside>
    <div class="container_navbar" >
        <div class="box_networks" >
            <Instagram/>
            <Meta/>
        </div>
    </div>
</aside>

<style>
    aside{
        position: fixed;
        top: 0;
        padding-block: 15px;
        width: 100%;
        height: 40px;
        display: grid;
        place-items: center;
    }
    .container_navbar{
        display: flex;
        align-items: center;
        justify-content: left;
        width: 850px;
    }
    .box_networks{
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4px 12px 2px 12px;
        border-radius: 30px;
        gap: 10px;
        border: solid 1px var(--secundary);
        background-color: var(--primary);
    }
</style>
