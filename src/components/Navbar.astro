---
import Instagram from "./buttons/Instagram.astro";
import Meta from "./buttons/Meta.astro";
import LogoButton from "./buttons/LogoButton.astro";
---

<aside id="navbar" >
    <div class="container_navbar" >
        <div>
            <LogoButton/>
        </div>
        <div class="box_networks" >
            <Instagram color="white" />
            <Meta/>
        </div>
    </div>
</aside>

<style>
    aside{
        position: fixed;
        z-index: 10;
        top: 0;
        padding-block: 15px;
        width: 100%;
        height: 40px;
        display: grid;
        place-items: center;
    }
    .container_navbar{
        display: flex;
        align-items: center;
        justify-content: left;
        width: 1000px;
        gap: 15px;
    }
    .box_networks{
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 120px;
        height: 36px;
        border-radius: 30px;
        gap: 25px;
        background-color: var(--action);
        overflow: hidden;
    }
    .box_networks:hover::after{
        content: "";
        position: absolute;
        top: 0;
        left: -120px;
        height: 100%;
        width: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.6),
            transparent
        );
        animation: shimmer 1.5s infinite;
    }
    .scrolled{
        background: var(--primary);
    }

    @media
        (width < 700px){
            .container_navbar{
                justify-content: space-between;
                width: 350px;
            }
        }
</style>
