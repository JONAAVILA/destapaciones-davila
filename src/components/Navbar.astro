---
import Instagram from "./buttons/Instagram.astro";
import Meta from "./buttons/Meta.astro";
import LogoButton from "./buttons/LogoButton.astro";
---

<aside>
    <div class="container_navbar" >
        <LogoButton/>
        <div class="box_networks" >
            <Instagram/>
            <Meta/>
        </div>
    </div>
</aside>

<style>
    aside{
        position: fixed;
        top: 0;
        padding-block: 15px;
        width: 100%;
        height: 40px;
        display: grid;
        place-items: center;
    }
    .container_navbar{
        display: flex;
        align-items: center;
        justify-content: left;
        width: 850px;
        gap: 15px;
    }
    .box_networks{
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4px 20px 2px 20px;
        border-radius: 30px;
        gap: 20px;
        background-color: var(--action);
    }
</style>
