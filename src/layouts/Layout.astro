---
const { title } = Astro.props
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ? title : 'Destapaciones Davila | Trabajamos en Toda Zona Sur'}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global >
	@font-face {
		font-family: 'PlayFair';
		src: url('../assets/fonts/Playfair_9pt_SemiCondensed-ExtraBold.ttf');
	}
	@font-face {
		font-family: 'Roboto';
		src: url('../assets/fonts/Roboto.ttf');
	}
	:root{
		--primary:#EAEAEA;
		--secundary:#2E2F31;
		--action:#1565C0;
		--sky-blue:#9ACAED;
		--grey:#D9D9D9;

		display: grid;
		align-items: center;
		justify-content: center;
		height: 100vh;
	}
	:root::-webkit-scrollbar{
   		width: 5px;
	}
	:root::-webkit-scrollbar-thumb{
		background-color: var(--secundary);
	}

	html,
	body {
		font-family: "Roboto", sans-serif;
		display: grid;
		align-items: center;
		margin: 0;
		background-color: var(--primary);
		color: var(--secundary);
	}
	h1{
		font-family: 'PlayFair',sans-serif;
		line-height: 1;
	}
	h2{
		font-weight: 500;
		font-style: italic;
	}
	h5,h6{
		margin: 2px;
	}
	p{
		font-weight: bold;
	}
	button{
		display: grid;
		place-items: center;
		width: 220px;
		height: 35px;
		border-radius: 40px;
		font-size: 12px;
		color: var(--primary);
		background-color: var(--action);
		outline: none;
		border: none;
	}
	textarea{
		height: 100px;
	}

	@keyframes shimmer {
		0% {
		transform: translateX(0);
		}
		100% {
		transform: translateX(450px);
		}
	}
</style>
